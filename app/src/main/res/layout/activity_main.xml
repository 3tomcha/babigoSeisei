<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="site.kobatomo.babigoseisei.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorGreen1">

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="30sp"-->
            <!--android:textStyle="bold"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="バビ語に変換！"-->
            <!--android:textScaleX="1.05"-->
            <!--android:textColor="@color/white"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp">

        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="200sp"
            android:layout_gravity="center_horizontal">
        <WebView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/memberphoto">
        </WebView>
        </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/edittextbackground">
        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_marginRight="4sp"
            android:layout_marginLeft="4sp"
            android:gravity="center"
            android:textColor="@color/white"
            />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingRight="10sp"
                    android:paddingLeft="10sp">


                    <TextView
                        android:id="@+id/button"
                        android:layout_width="200sp"
                        android:layout_height="100sp"
                        android:text="バビ語"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/buttonbackground"/>


                    <ImageView
                        android:id="@+id/text2speeech"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:src="@drawable/ic_record_voice_over_black_24dp"
                        android:layout_alignParentRight="true"
                        style="@style/text2speech"
                        />

                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/twitter_logo"/>
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>





    </LinearLayout>

</android.support.constraint.ConstraintLayout>
